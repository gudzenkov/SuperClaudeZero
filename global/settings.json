{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/setup-project.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/inject-context.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/inject-context.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/remind-validate.sh"
          },
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/remind-reflexion.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/remind-reflect.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME\"/.claude/hooks/scripts/checkpoint-session.sh"
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "serena": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "claude-code"],
      "env": {}
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    },
    "deepwiki": {
      "type": "http",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--no-sandbox",
        "--headless"
      ]
    },
    "Parallel-Search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://search-mcp.parallel.ai/mcp",
        "--header",
        "authorization: Bearer ${PARALLEL_API_KEY}"
      ]
    },
    "Parallel-Task": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://task-mcp.parallel.ai/mcp",
        "--header",
        "authorization: Bearer ${PARALLEL_API_KEY}"
      ]
    }
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(uv *)",
      "Bash(make *)",
      "Bash(mkdir *)",
      "Bash(chmod *)",
      "Bash(ls *)",
      "Read",
      "Write",
      "Edit",
      "Grep",
      "Glob",
      "WebSearch",
      "WebFetch",
      "Task"
    ],
    "deny": []
  },
  "outputStyle": "Ultra Concise"
}
